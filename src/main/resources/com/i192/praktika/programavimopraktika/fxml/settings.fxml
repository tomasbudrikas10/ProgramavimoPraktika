<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<StackPane fx:id="root" prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.i192.praktika.programavimopraktika.fxml.Settings">
    <ImageView fx:id="backgroundImageView">
        <Image url="@../images/background.png"/>
    </ImageView>
<VBox styleClass="container" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <Label styleClass="title" text="Game Settings" />
    <Label styleClass="section" text="Sound"/>
    <VBox>
        <Label styleClass="option" text="Sound Volume" />
        <HBox>
            <Slider fx:id="volumeSlider" value="50"/>
            <Label fx:id="volumeSliderText" text="50%"/>
        </HBox>
    </VBox>
   <Label styleClass="section" text="Keyboard &amp; Controller" />
    <Button fx:id="controllerSetupButton" mnemonicParsing="false" onAction="#controllerSetupLoop" text="Setup a controller" />
    <Text fx:id="textInfo" />
    <Button styleClass="doneButton" mnemonicParsing="false" onAction="#doneAction" text="Done" />

</VBox>
    </StackPane>
